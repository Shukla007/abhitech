<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.courseDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/course_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:src="@drawable/page1" />

        <TextView
            android:id="@+id/course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_thumbnail"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Physics class '12' chapter 2"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/instructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_title"
            android:layout_marginLeft="8dp"

            android:text="By John doe"
            android:textColor="#1F7DF1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courseDur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructor"
            android:layout_margin="8dp"
            android:text="4 Week"
            android:textColor="#616161"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/courseDis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseDur"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="3dp"
            android:text="@string/dis"
            android:textColor="#111"
            android:textSize="15dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseDis"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:text="Buy now" />


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>